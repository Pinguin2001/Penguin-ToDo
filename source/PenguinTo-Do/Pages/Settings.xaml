<Page
    x:Class="PenguinTo_Do.Pages.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Required">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ScrollViewer>
            <StackPanel Margin="10,10,10,10">
                <controls:Expander Header="App Data" IsExpanded="True" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                    <controls:Expander.Content>
                        <Button Click="ResetToDoList_Click" Content="Reset To-Do List"/>
                    </controls:Expander.Content>
                </controls:Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>